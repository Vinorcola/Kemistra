{% extends '::base.html.twig' %}

{% block titre %}Liste des clients{% endblock %}

{% block body -%}
    <h1>Liste des clients</h1>

    <table class="records_list table table-bordered table-striped table-condensed">
        <thead>
            <tr>
				<th>Prénom</th>
                <th>Nom</th>
				<th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
				<td>{{ client.prenom }}</td>
                <td>{{ client.nom }}</td>
                <td class="icone">
					<a title="Détail" href="{{ path('client_show', { 'id': client.id }) }}">
						<img  src="{{ asset('bundles/kemistramain/images/detail.svg') }}" alt="Détail"/>
					</a>
				</td>
				<td class="icone">
					<a title="Éditer" href="{{ path('client_edit', { 'id': client.id }) }}">
						<img src="{{ asset('bundles/kemistramain/images/editer.png') }}" alt="Éditer"/>
					</a> 
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('client_new') }}">
                Ajouter un nouveau client
            </a>
        </li>
    </ul>
    {% endblock %}
