{% extends '::form_base.html.twig' %}

{% block titre %}Ajout d'un nouveau matériel dans le stock{% endblock %}

{% block body -%}
    <h1>Ajout d'un nouveau matériel dans le stock</h1>
    
    <form action="{{ path('stockmaterielwithtypemateriel_create') }}" method="post" {{ form_enctype(formulaire) }}>
        {{ form_errors(formulaire) }}
        <fieldset>
            <legend>Informations sur le matériel</legend>
            {{ form_row(formulaire.typeMateriel) }}
        </fieldset>
        
        <fieldset>
            <legend>Information sur l'achat</legend>
            {{ form_rest(formulaire) }}
        </fieldset>
        <p><button class="btn" type="submit">Ajouter</button></p>
    </form>
{% endblock %}





{% block panel %}
    <li><a href="{{ path('stockmateriel_new') }}">Ajouter un matériel connu</a>.</li>
    <li><a href="{{ path('stockmateriel') }}">Annuler la création</a>.</li>
{% endblock %}
