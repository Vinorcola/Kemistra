{% extends '::form_base.html.twig' %}

{% block titre %}Enregistrement des résultats d'une nouvelle analyse{% endblock %}

{% block body -%}
    <h1>Enregistrement des résultats d'une nouvelle analyse</h1>
    
    <form action="{{ path('analyse_create') }}" method="post" {{ form_enctype(formulaire) }}>
        {{ form_widget(formulaire) }}
        <p>
            <button class="btn" type="submit">Enregistrer</button>
        </p>
    </form>
{% endblock %}





{% block panel %}
    <li><a href="{{ path('analyse') }}">Annuler la création de l'analyse</a>.</li>
{% endblock %}





{% block jsInclude %}{{ parent() }}
<script src="{{ asset('bundles/kemistramain/js/subFormManager.js') }}"></script>{% endblock %}





{% block js %}{{ parent() }}
<script type="text/javascript">
    $(document).ready(function()
    {
        addResultatSubForm($('div#kemistra_mainbundle_analysetype_resultats'), 0, 'Masse', 'g', 4);
        addResultatSubForm($('div#kemistra_mainbundle_analysetype_resultats'), 1, 'Volume', 'mL', 5);
        
        addConsommableSubForm($('div#kemistra_mainbundle_analysetype_consommables'), 0, 'Eau déminée', 'mL', 7);
        addConsommableSubForm($('div#kemistra_mainbundle_analysetype_consommables'), 1, 'HCl', 'mL', 15);
        addConsommableSubForm($('div#kemistra_mainbundle_analysetype_consommables'), 2, 'Diiode 15%', 'mL', 17);
    });
</script>
{% endblock %}

